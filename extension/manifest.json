{
  "manifest_version": 3,
  "name": "WattWise",
  "version": "1.0.0",
  "description": "Smart sustainable shopping assistant integrated with Nessie API.",
  
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Open WattWise"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*.amazon.com/*",
        "https://*.amazon.com/*",
        "http://amazon.com/*",
        "https://amazon.com/*",
        "http://*.bestbuy.com/*",
        "https://*.bestbuy.com/*",
        "http://bestbuy.com/*",
        "https://bestbuy.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "http://api.nessieisreal.com/*",
    "https://api.nessieisreal.com/*",
    "https://api.climatiq.io/*",
    "https://www.ifixit.com/api/*",
    "https://docs.google.com/*",
    "https://*.googleusercontent.com/*"
  ]
}